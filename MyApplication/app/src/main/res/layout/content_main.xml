<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/background">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:gravity="center" android:foregroundGravity="center">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/imageView"/>


        <Button
                android:text="TOMAR FOTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tomar"/>

    </LinearLayout>


</RelativeLayout>