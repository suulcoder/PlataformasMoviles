<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="345dp" android:layout_height="550dp"
                  android:orientation="vertical"
                  android:background="@drawable/fondo"
    >



        <TextView
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:textColor="@android:color/tab_indicator_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="The Play Restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"/>

        <ImageView
                android:background="@android:color/transparent"

                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="212dp"
                android:src="@drawable/logo"

        />

        <Button
                android:layout_marginTop="@android:dimen/notification_large_icon_height"
                android:layout_gravity="center"
                android:text="MenÃº"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/menu"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Orden" android:id="@+id/orden"/>

    </LinearLayout>


</RelativeLayout>

